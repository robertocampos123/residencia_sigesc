{% extends 'base.html.twig' %}

{% block title %}Materia{% endblock %}

{% block body %}
    
    <div class="bg-white container w-70  rounded shadow mt-4" >

    <h5 class="fw-bold text-center text-info py-2">Detalles de la Asignatura</h5>

    <table class="table table-striped table-sm table-bordered table-hover" style="text-align:left">
    <caption></caption>
        <tbody>
            <tr>
                <th class="table-active">Clave:</th>
                <td>{{ materium.claveMateria }}</td>
            </tr>
            <tr>
                <th class="table-active">Nombre:</th>
                <td>{{ materium.nombreMateria }}</td>
            </tr>
            <tr>
                <th class="table-active">Objetivo:</th>
                <td>{{ materium.objetivoMateria }}</td>
            </tr>
            <tr>
                <th class="table-active">Caracterizacion:</th>
                <td>{{ materium.caracterizacionMateria }}</td>
            </tr>
            <tr>
                <th class="table-active">Intención Didáctica:</th>
                <td>{{ materium.intencionDidactica }}</td>
            </tr>
            <tr>
                <th class="table-active">Plan Académico: </th>
                <td>{{ materium.planAcademico }}</td>
            </tr>
            <tr>
                <th class="table-active">HT:</th>
                <td>{{ materium.horasTeoricas }}</td>
            </tr>
            <tr>
                <th class="table-active">HP:</th>
                <td>{{ materium.horasPracticas }}</td>
            </tr>
            <tr>
                <th class="table-active">CR:</th>
                <td>{{ materium.creditos }}</td>
            </tr>
            
            <tr>
                <th class="table-active">Semestre:</th>
                <td>{{ materium.semestre }}</td>
            </tr>
            <tr>
                <th class="table-active">Carrera(s):</th>
                <td>
                <ul>
                {% for carrera in materium.carrera %}
                <li>{{carrera}}</li>
                {% endfor %}
                </ul>
                </td>
            </tr>
        </tbody>
    </table>

</div>

{% endblock %}
