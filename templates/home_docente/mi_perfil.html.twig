{% extends 'base_dashboard_docente.html.twig' %}

{% block title %}Mi Perfil{% endblock %}
{% block main %}

{% set genero = null %}
{% if empleado.getGenero == 'M' %}
{% set genero = 'Masculino' %}
{% elseif empleado.getGenero == 'F' %}
{% set genero = 'Femenino' %}
{% endif %}

<div class="table-responsive">
    <div class="bg-transparent container w-70% mt-4  d-flex flex-row justify-content-center">      
        <div class="card" style="display: inline-block; margin:1%;">
               <img class="card-img-top" src="{{ asset('uploads/fotografia/' ~ empleado.getFotografiaEmpleado) }}" style="width:200px;height:200px;display: block;margin-left: auto;margin-right: auto;margin-top:5px; border-radius: 50%"> 
              <a style="text-align: center;display:block;" href="{{ path('app_empleado_cambiar_fotografia', {'id': empleado.getId}) }}">Editar</a>
              <div class="card-body">
                <ul class="list-group" style=" text-align: justify;">
                  <li class="list-group-item list-group-item-info">Nombre: {{ empleado.getNombreEmpleado}} {{ empleado.getApellidoPaterno}} {{ empleado.getApellidoMaterno}}</li>
                  <li class="list-group-item">GÃ©nero: {{ genero}}</li>
                  <li class="list-group-item">Credencial: {{ empleado.getMail.getEmail}}</li>
                  <li class="list-group-item">Cargo: {{ empleado.getCargo.getNombreCargo}}</li>
                  <li class="list-group-item">Departamento de {{ empleado.getDepartamento.getNombreDepartamento}}</li>
                  <li class="list-group-item">Grupos Atendidos: {{ no_grupos}}</li>
                </ul>
              </div>
        </div>
    </div>  
</div>
{% endblock %}