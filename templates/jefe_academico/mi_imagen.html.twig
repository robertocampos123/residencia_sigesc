{% extends 'base.html.twig' %}

{% block title %}Cambiar Fotografía{% endblock %}

{% block body %}
<style>

   <style>
    @import url(//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css);
    @import url(https://fonts.googleapis.com/css?family=Titillium+Web:300);
    .fa-2x {
        font-size: 2em;
    }
    .fa {
        position: relative;
        display: table-cell;
        width: 60px;
        height: 36px;
        text-align: center;
        vertical-align: middle;
        font-size:30px;
        color: #F9F6EE;
    }
    .nav-text {
        position:relative;
        display:table-cell;
        vertical-align:middle;
        width:190px;
        font-family: 'Titillium Web', sans-serif; 
    }
    .nav-button {
        position:relative;
        display:table-cell;
        vertical-align:middle;
        font-family: 'Titillium Web', sans-serif;
    }
</style>
    <nav class="navbar navbar-expand-sm " style="background-color: #7D9D9C ">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link text-white my-1 my-sm-0" href="{{ path('app_perfil_jefe_academico') }}"><span class="nav-button">Regresar</span></a>
        </li>
        </ul>
        <form class="form-inline mx-0 my-lg-0 mb-5">
        <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
            <a class="nav-link text-white" ><i class="fa fa-user-circle fa-2x" ></i><span class="nav-text">{{user}}</span></a>
        </li>
        <li class="nav-item active">
            <br>
        </li>
        </ul>
        <a class="nav-link text-white my-1 my-sm-0" href="{{ path('app_logout') }}"><i class="fa fa-sign-out fa-2x" ></i><span class="nav-button">Cerrar Sesión</span></a>
        </form>
    </div>
    </nav>
    <div class="bg-white container w-60  rounded shadow mt-4" >
    <div class="row align-items-stretch">
            <div class="col bg-white p-3 rounded form-group">
                {{ form_start(form1) }}
                {% if firma %}
                    <div class="alert alert-danger">Ya existe una Firma ¿Deseas Reemplazarla?</div>
                    <img  src="{{ asset('uploads/firma/' ~ firma) }}" style="width:200px;height:200px;display: block;margin-left: auto;margin-right: auto;margin-top:5px; border-radius: 50%"> 
                {% endif %}
                <div class="col-md-12 py-4">
                    {{form_label(form1.firma_empleado)}}
                    {{form_widget(form1.firma_empleado, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="col-md-12 py-4">
                    {{form_label(form1.Almacenar)}}
                    {{form_widget(form1.Almacenar, { 'attr': {'class': 'btn btn-primary btn-block'} })}}
                </div>     
                {{ form_end(form1) }}
            </div>   
            <div class="col bg-white p-3 rounded form-group">
                {{ form_start(form2) }
                {% if fotografia %}
                    <div class="alert alert-danger">Ya existe una Imagen ¿Deseas Reemplazarla?</div>
                        <img  src="{{ asset('uploads/fotografia/' ~ fotografia) }}" style="width:200px;height:200px;display: block;margin-left: auto;margin-right: auto;margin-top:5px; border-radius: 50%"> 
                {% endif %}
                <div class="col-md-12 py-4">
                    {{form_label(form2.fotografia_empleado)}}
                    {{form_widget(form2.fotografia_empleado, { 'attr': {'class': 'form-control'} })}}
                </div>
                <div class="col-md-12 py-4">
                    {{form_label(form2.Almacenar)}}
                    {{form_widget(form2.Almacenar, { 'attr': {'class': 'btn btn-primary btn-block'} })}}
                </div>          
                {{ form_end(form2) }}               
            </div>                
    </div>
    </div>
{% endblock %}
