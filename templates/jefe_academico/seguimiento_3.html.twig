{% extends 'base_dashboard_jefe_academico.html.twig' %}

{% block title %}Primer Seguimiento{% endblock %}

{% block main %}
<div class="bg-white container w-70  rounded shadow mt-4 p-4" >
    <h5 class="fw-bold text-center text-black py-2">Tercer Seguimiento del Departamento de {{departamento}}</h5>
    <div class="row align-items-stretch">
        <div class="col bg-white px-0">     
    </div>
    <div class=" d-flex flex-row-reverse py-2 px-4">
        <a class="btn btn btn-info btn-sm" href="{{ path('app_seguimientos3_grafica')}}" >Aprovechamiento Global</a>
    </div>
    <table class="table table-sm table-bordered table-hover" style="text-align:center">
        <thead class="thead-light">
             <tr>
                <th >Grupo</th>
                <th >Materia</th>
                <th >Inscritos</th>
                <th >Titular</th>
                <th >Carrera</th>
                <th >Seguimiento</th>
                <th >Gr√°fica</th>
            </tr>
        </thead>
        <tbody>
      {% set i = 0%}
      {% for grupo in pagination %}
        <tr>
                <td>{{ grupo.clave_grupo }}</td>
                <td>{{ grupo.nombre_materia }}</td>
                <td>{{ grupo.inscritos}}</td>
                <td>{{ grupo.nombre_empleado }} {{ grupo.apellido_paterno }}</td>
                <td>{{ grupo.clave_carrera}}</td>
                <td> <a class="btn btn-primary btn-sm" href="{{ path('app_tercer_seguimiento_grupo',{'id': grupo.id}) }}"><i id="icon" class="fa fa-pencil-square-o"></i></a></td>
                <td style="text-align: center"> <a class="btn btn-primary btn-sm" href="{{ path('app_seg3_grupo_grafica',{'id': grupo.id}) }}"><i id="icon" class="fa fa-bar-chart"></i></a></td>
            </tr>
      {% set i = i + 1%}
      {% else %} 
             <tr>
                <td colspan="6">Sin registros</td>
            </tr>
      {% endfor %}
        </tbody>
    <caption>No. de Grupos: {{i}}</caption>
    </table>
     <div class="navigation" style="display: flex; justify-content: center;">
        {{ knp_pagination_render (pagination) }}
    </div>
</div>
{% endblock %}
