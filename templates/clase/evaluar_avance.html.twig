{% extends 'base.html.twig' %}

{% block title %}Evaluar Unidad Temática{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="bg-white container w-70  rounded shadow mt-4" >
            <h5 class="fw-bold text-center text-info py-2">Unidad {{ seguimiento.getTema.getNumeroUnidad }}. {{ seguimiento.getTema.getNombreUnidad }}</h5>
            <table class="table" style="text-align:center">
                <thead>
                 <tr>
                    <th colspan="3">Período Programado</th>
                </tr>
                <tr>
                    <th>Inicio</th>
                    <th>Cierre</th>
                    <th>Evaluación</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>{{ seguimiento.getFechaProgInicio ? seguimiento.getFechaProgInicio|date('d-m-Y') : '' }}</td>
                        <td>{{ seguimiento.getFechaProgFin ? seguimiento.getFechaProgFin|date('d-m-Y') : '' }}</td>
                        <td>{{ seguimiento.getEvaluacionProgramada ? seguimiento.getEvaluacionProgramada|date('d-m-Y') : '' }}</td>
                    </tr> 
                </tbody>
            </table>
            <table class="table" style="text-align:center">
                <thead>
                 <tr>
                    <th colspan="3">Periodo Real</th>
                </tr>
                <tr>
                    <th>Inicio</th>
                    <th>Cierre</th>
                    <th>Evaluación</th>
                </tr>
                </thead>
                <tbody>
                <form action="/clase/registrar_seguimiento/{{seguimiento.id}}" method="POST" enctype="multipart/form-data">
                    <tr>
                        <td><input type="date" id="real_inicio" name="real_inicio" value="{{ seguimiento.getFechaProgInicio ? seguimiento.getFechaProgInicio|date('Y-m-d') : '' }}" required></td>
                        <td><input type="date" id="real_cierre" name="real_cierre" value="{{ seguimiento.getFechaProgFin ? seguimiento.getFechaProgFin|date('Y-m-d') : '' }}" required></td>
                        <td><input type="date" id="real_evaluacion" name="real evaluacion" value="{{ seguimiento.getEvaluacionProgramada ? seguimiento.getEvaluacionProgramada|date('Y-m-d') : '' }}" required></td>
                    </tr>
                        <tr>
                            <th>Observaciones</th>
                            <th>Evidencia</th>
                        </tr>
                    <tr>
                        <td><textarea id="observaciones" name="observaciones" rows="" cols=""></textarea></td>
                        <td><textarea id="evidencia" name="evidencia" rows="" cols=""></textarea></td>
                        <td><input type="submit" class="btn btn-success" value="Registrar Seguimiento"></td>
                    </tr> 
                </form>
                </tbody>
          </table>
</div>
{% endblock %}
